{
  "name": "diffhtml",
  "version": "0.3.0",
  "description": "DOM Diffing library and prollyfill",
  "main": "dist/diffhtml",
  "author": "Tim Branyen (@tbranyen)",
  "repository": "https://github.com/tbranyen/diffhtml",
  "license": "MIT",
  "scripts": {
    "start": "http-server",
    "build": "browserify -s diff lib/index.js | derequire > dist/diffhtml.js",
    "watch": "watchify -d -s diff lib/index.js -o dist/diffhtml.js -v",
    "watch-dev": "watchify -d -s diff lib/index.js -o 'derequire > dist/diffhtml.js' -v",
    "jshint": "jshint lib/**/*.js",
    "mocha": "mocha-phantomjs $npm_package_config_hooks $npm_package_config_setting test/index.html",
    "test": "npm run jshint && npm run mocha"
  },
  "devDependencies": {
    "browserify": "^11.2.0",
    "browserify-istanbul": "^0.2.1",
    "custom-event": "^1.0.0",
    "derequire": "^2.0.2",
    "http-server": "^0.8.5",
    "istanbul": "^0.3.22",
    "jshint": "^2.8.0",
    "mocha": "^2.3.3",
    "mocha-phantomjs": "^4.0.1",
    "mocha-phantomjs-istanbul": "^0.0.2",
    "promise-polyfill": "^2.1.0",
    "requirejs": "^2.1.22",
    "watchify": "^3.4.0",
    "weakmap": "^0.0.6"
  },
  "browserify": {
    "transform": [
      "deamdify"
    ]
  },
  "dependencies": {
    "deamdify": "^0.1.1"
  },
  "config": {
    "hooks": "--hooks mocha-phantomjs-istanbul",
    "setting": "--setting coverageFile=./coverage.json"
  }
}
